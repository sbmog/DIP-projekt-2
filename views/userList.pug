include includes/header

body#userAdminPage
    h1 Brugeradministration

    div.action-buttons
        if isLoggedIn 
            a.create-btn(href="/chats") Se chats
            a.create-btn(href="/users/create") Opret ny bruger
            a.logoutbtn(href="/logout") Log ud 
        else 
            a.create-btn(href="/") Log ind

    table.user-table
        thead
            tr
                th ID
                th Brugernavn
                th Niveau
                th Oprettet dato
                th 
        tbody
            if users.length > 0
                each user in users
                    tr
                        td #{user.id}
                        td #{user.userName}
                        td #{user.userLvl}
                        td #{new Date(user.oprettelsesDato).toLocaleDateString()}
                        td
                            a.delete-chat-btn(href="javascript:void(0)", onclick=`deleteUser(${user.id})`) Slet
            else 
                tr
                    td(colspan="4") Ingen brugere fundet.
    